	user/spawn.o \
	user/string.o \
	user/syscall.o \
	user/wait.o \

user/%: user/entry.o user/%.o $(USERLIB)
	@echo ld $@
	@$(LD) -o $@ $(ULDFLAGS) $(LDFLAGS) -nostdlib $^

user/%.asm: user/%
	$(OBJDUMP) --adjust-vma=0x7ff000 -S $^ >$@

user/%.o: lib.h

.PRECIOUS: %.o user/%

